<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.ErrorTextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/materialRed500</item>
        <item name="android:labelTextSize">@dimen/fontsize_texthint</item>
    </style>

    <style name="AppTheme.TextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/materialGray600</item>
        <item name="android:labelTextSize">@dimen/fontsize_texthint</item>
    </style>

    <style name="AppTheme.TextField" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/materialGray900</item>
        <item name="android:textSize">@dimen/fontsize_textfield</item>
        <item name="android:textColorHint">@color/materialGray600</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>

    <style name="AppTheme.TextFieldMultiline" parent="@style/AppTheme.TextField">
        <item name="android:textColor">@color/materialGray900</item>
        <item name="android:textColorHint">@color/materialGray600</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">@dimen/fontsize_textfield</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AppTheme.TextFieldBold" parent="@style/AppTheme.TextField">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DisplayTypeTextField" parent="@style/AppTheme.TextField">
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="AppTheme.TextFieldPassword" parent="AppTheme.TextField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.TextFieldNext" parent="@style/AppTheme.TextField">
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppTheme.TextFieldDone" parent="@style/AppTheme.TextField">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="AppTheme.TextFieldPasswordNext" parent="@style/AppTheme.TextFieldPassword">
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppTheme.TextFieldPasswordDone" parent="@style/AppTheme.TextFieldPassword">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="AppTheme.TextFieldMultilineDone" parent="@style/AppTheme.TextFieldMultiline">
        <item name="android:imeOptions">actionDone</item>
    </style>

</resources>