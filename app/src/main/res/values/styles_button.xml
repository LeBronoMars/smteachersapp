<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/fontsize_button</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Montserrat-SemiBold.otf</item>
    </style>

    <style name="AppTheme.ButtonStyle.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/fontsize_button</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Montserrat-Regular.otf</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ButtonStyle.Default" parent="AppTheme.ButtonStyle">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

</resources>